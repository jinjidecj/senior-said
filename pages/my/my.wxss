/**index.wxss**/

.mycontainer {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 10rpx 0;
  box-sizing: border-box;
}

.level{
  flex-direction: row;
  align-items: center;
}
.weui-cells_after-title {
  margin-top: 0;
}

.weui-cells {
  position: relative;
  margin-top: 1.17647059em;
  background-color: #fff;
  line-height: 1.41176471;
  font-size: 17px;
  width: 100%;
  border-top-width: 100%;
  border-top-color: #f6f6f6;
  border-top-style: solid;

}

.weui-cell {
  padding: 10px 15px;
  position: relative;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
  border-bottom-width: 60%;
  border-bottom-color: #f8f8f8;
  border-bottom-style: solid;
}

.weui-cell__bd {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
  padding: 4rpx 0 0 10rpx;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
} 

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

