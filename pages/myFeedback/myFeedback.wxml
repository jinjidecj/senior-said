<view>
  <view class="weui-cells__title">反馈内容</view>
  <view class="weui-cells weui-cells_after-title">
    <view class="weui-cell">
      <view class="weui-cell__bd">
        <textarea class="weui-textarea" placeholder="请输入反馈内容" style="height:400rpx" />
        <view class="weui-textarea-counter">0/200</view>
      </view>
    </view>
  </view>
  <view class="weui-cells__title">联系邮箱</view>
    <view class="weui-cells weui-cells_after-title">
      <view class="weui-cell weui-cell_input">
        <view class="weui-cell__bd">
          <input class="weui-input" placeholder="请输入邮箱" />
        </view>
      </view>
    </view>
</view>
<view class="button-view">
  <view class='button'>
    <view class='button-text' bindtap="sendArticlenConfim">
      <text>发送反馈</text>
    </view>
    <view class="centerline"></view>
    <view class='button-text' bindtap='save'>
      <text>存为草稿</text>
    </view>
  </view>
</view>