<view>
  <scroll-view scroll-y="true" class="scoll-h">
    <block wx:for="{{news}}" wx:key="*this">
      <view class="item" bindtap='clickItem' >
        <view class='left-text'>
          <view class='title'>
            <text>{{item.title}}</text>
          </view>
          <view class='readnum'>
          <text>{{item.readnum}}阅读</text>
          </view>
        </view>
        <view class='right-img'>
          <image src='{{item.img}}' class='right-img-item'></image>
        </view>
      </view>
    </block>
  </scroll-view>
</view>