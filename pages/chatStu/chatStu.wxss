.button-view {
  background-color: #f0f0f0;
  width: 100%;
  position: fixed;
  bottom: 0rpx;
  display: flex;
  flex-direction: column;
}

.sendMessage {
  width: 100%;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  margin-top: 10rpx;
}

.message {
  padding-top: 0rpx;
  padding-bottom: 10rpx;
  width: 710rpx;
  height: 100rpx;
}

.message-text {
  padding: 15rpx 20rpx 10rpx 20rpx;
  border-bottom-width: 90%;
  border-bottom: solid 1rpx;
  border-bottom-color: green;
}

.send {
  width: 100rpx;
  height: 100rpx;
  margin-right: 5px;
  margin-top: 10rpx;
}

.send-img {
  width: 50rpx;
  height: 50rpx;
  padding: 10rpx 25rpx 25rpx 25rpx;
}

.little-function {
  width: 100%;
  height: 60rpx;
  display: flex;
  flex-direction: row;
}

.function-item {
  width: 150rpx;
  height: 50rpx;
}

.function-img {
  width: 50rpx;
  height: 50rpx;
  padding: 0 50rpx 0 50rpx;
}

.historycon {
  height: 90%;
  width: 100%;
  flex-direction: column;
  display: flex;
  border-top: 0px;
}

.time {
  font-size: 13px;
  color: #b8b8b8;
  text-align: center;
}

.chat-left {
  width: 100%;
  height: 100rpx;
  display: flex;
  flex-direction: row;
}

.user-img {
  width: 100rpx;
  height: 100rpx;
}

.user-img-item {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  overflow: hidden;
}

.chat-img {
  width: 600rpx;
  height: 200rpx;
}

.chat-img-item {
  width: 100%;
  height: 100%;
}

.chat-content {
  /* display: flex;
  flex-direction: row;
  justify-content: space-between; */
  padding-left: 8px;
  padding-top: 8px;
  padding-right: 8px;
  padding-bottom: 8px;
  margin-left: 8px;
  margin-right: 8px;
  margin-top: 8px;
  background-color: #fff;
  border: 1px solid #eaeaea;
  border-bottom: 1px solid #d0d0d0;
  border-radius: 5px;
  width: 450rpx;
}
.chat-right {
  padding: 10rpx;
  margin-right: 0rpx;
  width: 98%;
  height: 100rpx;
  display: flex;
  flex-direction: row-reverse;
}
.scroll-view{
  width: 100%;
}